{
  "name": "websight-e2e-tests",
  "version": "0.0.1",
  "description": "WebSight distribution functional and visual tests.",
  "main": "index.js",
  "scripts": {
    "dev": "cypress open --browser chrome",
    "test": "cypress run --browser chrome --reporter mochawesome --reporter-options reportDir=report,overwrite=false,html=true,json=true",
    "test:formatting": "prettier --check . && eslint **/*.ts",
    "test:visual": "percy exec -- cypress run",
    "format": "prettier --write .",
    "format:watch": "onchange \"**/*\" -- prettier --write --ignore-unknown {{changed}}",
    "rebuild-content": "cd ../content && mvn clean install -P autoInstallPackage",
    "report:merge": "npx mochawesome-merge -f cypress/results/json/*.json -o cypress/results/mochawesome-bundle.json",
    "report:clean": "rm -rf cypress/results cypress/screenshots cypress/reports || true",
    "report:generate": "npx marge cypress/results/mochawesome-bundle.json -o cypress/reports/html",
    "report:moveScreenshots": "mv cypress/screenshots cypress/reports/html/screenshots 2>/dev/null || true",
    "report:moveVideos": "mv cypress/videos cypress/reports/html/videos 2>/dev/null || true",
    "report:moveData": "mv cypress/results/data cypress/reports/html/data 2>/dev/null || true",
    "report:createHtml": "npm run report:merge && npm run report:generate && npm run report:moveScreenshots && npm run report:moveVideos && npm run report:moveData",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:cireports": "npm run report:clean && cypress run --headless && npm run report:createHtml;",
    "test:ci": "cypress run --headless"
  },
  "devDependencies": {
    "@4tw/cypress-drag-drop": "^2.1.0",
    "@percy/cli": "^1.10.1",
    "@percy/cypress": "^3.1.2",
    "@types/jest": "^29.0.2",
    "@types/mochawesome": "^6.2.1",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "chai": "^4.3.6",
    "cypress": "^10.8.0",
    "cypress-multi-reporters": "^1.5.0",
    "eslint": "^8.23.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.12.1",
    "mocha": "^9.1.3",
    "mocha-junit-reporter": "^2.2.0",
    "mochawesome": "^7.0.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^6.0.1",
    "onchange": "^7.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.8.2"
  }
}
