{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "defaultDataTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Default Data",
      "title": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "title",
        "label": "Title",
        "defaultValue": "Demo"
      },
      "icon": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "icon",
        "label": "icon"
      },
      "value": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "value",
        "label": "Value"
      },
      "indicatorType": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "indicatorType",
        "label": "Indicator Type",
        "up": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Up",
          "value": "up"
        },
        "down": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Down",
          "value": "down"
        },
        "same": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Same",
          "value": "same"
        }
      },
      "indicatorValue": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "indicatorValue",
        "label": "Indicator Value"
      }
    },
    "websocketTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "WebSocket Data Source",
      "websocketHost": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "websocketHost",
        "label": "Websocket Host"
      },
      "websocketTopic": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "websocketTopic",
        "description": "Please provide a topic for this widget to use, this can not be updated later, default value will be generated if not provided.",
        "label": "Websocket Topic"
      }
    },
    "jsonTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "JSON Data Source",
      "dataSource": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "dataSource",
        "description": "Please provide url to data source(JSON) for this ticker.",
        "label": "Data Source"
      }
    },
    "flowTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/apps/typerefinery/components/workflow/flow/dialog/tabs/flowTab"
    }
  }
}
