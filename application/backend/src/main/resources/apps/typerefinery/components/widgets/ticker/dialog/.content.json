{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "general": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "variant": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "variant",
        "label": "Variants",
        "primaryTicker": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Primary Ticker",
          "value": "primaryTicker",
          "selected": true
        },
        "secondaryTicker": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Secondary Ticker",
          "value": "secondaryTicker"
        }
      },
      "title": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "title",
        "description": "Title of the ticker, this is used to sync into Flow when its enabled.",
        "label": "Title",
        "defaultValue": "Demo"
      },
      "value": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "value",
        "label": "Value"
      },
      "secondaryContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "backGroundVariant": {
          "sling:resourceType": "wcm/dialogs/components/select",
          "name": "backGroundClass",
          "label": "Background Color",
          "primary": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Primary",
            "value": "primary",
            "selected": true
          },
          "secondary": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Secondary",
            "value": "secondary"
          },
          "indigo": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Indigo",
            "value": "indigo"
          },
          "purple": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Purple",
            "value": "purple"
          },
          "light-brown": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Light Brown",
            "value": "light-brown"
          },
          "light-green": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Light Green",
            "value": "light-green"
          },
          "green": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Green",
            "value": "green"
          },
          "dark-blue": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Dark Blue",
            "value": "dark-blue"
          },
          "brown": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Brown",
            "value": "brown"
          }
        },
        "ws:display": {
          "condition": {
          "sourceName": "variant",
          "values":  "secondaryTicker"
        }}
      },
      "primaryContainer": {
        "sling:resourceType": "wcm/dialogs/components/container",
        "indicatorType": {
          "sling:resourceType": "wcm/dialogs/components/select",
          "name": "indicatorType",
          "label": "Indicator Type",
          "up": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Up",
            "value": "up"
          },
          "down": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Down",
            "value": "down"
          },
          "same": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Same",
            "value": "same"
          }
        },
        "indicatorValue": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "name": "indicatorValue",
          "label": "Indicator Value"
        },
        "ws:display": {
          "condition": {
          "sourceName": "variant",
          "values":  "primaryTicker"
        }}
      }
    },
    "websocketTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/apps/typerefinery/components/dialog/tabs/websocket"
    },
    "flowTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/apps/typerefinery/components/flow/flowcontainer/dialog/tabs/flowTab"
    },
    "gridTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/apps/typerefinery/components/dialog/tabs/grid"
    }
  }
}
