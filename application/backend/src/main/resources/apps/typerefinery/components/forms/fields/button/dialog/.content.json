{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "fieldLabel": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/typerefinery/components/forms/form/common/fieldLabel"
      },
      "buttonType": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "buttonType",
        "label": "Button Type",
        "submitButton": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Submit",
          "value": "submit"
        },
        "normalButton": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Button",
          "value": "button"
        }
      },
      "url": {
        "sling:resourceType": "wcm/dialogs/components/pathpicker",
        "rootPath": "/content",
        "name": "url",
        "label": "Navigate to",
        "description": "When click on the button the page will be redirected to the the URL provided.",
        "ws:display": {
          "condition": {
            "sourceName": "buttonType",
            "values": "button"
          }
        }
      },
      "openInNewTab": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "openInNewTab",
        "label": "Open in new tab",
        "description": "Open the page in new tab.",
        "ws:display": {
          "condition": {
            "sourceName": "buttonType",
            "values": "button"
          }
        }
      }
    },
    "styleTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Style",
      "classes": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/typerefinery/components/dialog/tab/style/classes"
      },
      "buttonSize": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "buttonSize",
        "label": "Size",
        "default": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Default",
          "selected": true,
          "value": ""
        },
        "small": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Small",
          "value": "small"
        },
        "large": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Large",
          "value": "large"
        }
      },
      "buttonVariant": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "buttonVariant",
        "label": "Button Variant",
        "default": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Default",
          "selected": true,
          "value": ""
        },
        "primary": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Primary",
          "value": "primary"
        },
        "success": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Success",
          "value": "success"
        },
        "warning": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Warning Button",
          "value": "warning"
        },
        "danger": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Danger Button",
          "value": "danger"
        },
        "text": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Text Button",
          "value": "text"
        },
        "help": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Help Button",
          "value": "help"
        },
        "link": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Link Button",
          "value": "link"
        }
      },
      "isRoundedButton": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isRoundedButton",
        "label": "Rounded Button"
      },
      "isRaisedButton": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isRaisedButton",
        "label": "Raised Button"
      },
      "isOutlinedButton": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isOutlinedButton",
        "label": "Outlined Button"
      }
    }
  }
}