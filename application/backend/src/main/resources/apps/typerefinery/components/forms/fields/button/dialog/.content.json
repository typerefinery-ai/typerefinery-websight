{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
    "generalTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "General",
      "fieldLabel": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/typerefinery/components/forms/form/common/fieldLabel"
      },
      "buttonType": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "buttonType",
        "label": "Button Type",
        "submitButton": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Submit",
          "value": "submit"
        },
        "normalButton": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Navigate",
          "value": "navigate"
        },
        "actionButton": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Action",
          "value": "action"
        }
      },
      "url": {
        "sling:resourceType": "wcm/dialogs/components/pathpicker",
        "rootPath": "/content",
        "name": "url",
        "label": "Navigate to",
        "description": "When click on the button the page will be redirected to the the URL provided.",
        "ws:display": {
          "condition": {
            "sourceName": "buttonType",
            "values": "navigate"
          }
        }
      },
      
      "openInNewTab": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "openInNewTab",
        "label": "Open in new tab",
        "description": "Open the page in new tab.",
        "ws:display": {
          "condition": {
            "sourceName": "buttonType",
            "values": "navigate"
          }
        }
      },
      "showIcon": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "showIcon",
        "label": "Show Icon"
      },
      "icon": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "icon",
        "label": "Icon",
        "ws:display": {
          "condition": {
            "sourceName": "showIcon",
            "values": true
          }
        }
      },
      "iconPosition": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "iconPosition",
        "label": "Icon Position",
        "ws:display": {
          "condition": {
            "sourceName": "showIcon",
            "values": true
          }
        },
        "left": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "left",
          "value": "left"
        },
        "right": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "right",
          "value": "right"
        }
      }
    },
    "actionMetaData": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Action Meta data",
      "ws:display": {
        "condition": {
          "sourceName": "buttonType",
          "values": "action"
        }
      },
      
      "actionType": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "actionType",
        "label": "Action Type",
        "openModal": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Open Modal",
          "value": "openModal"
        },
        "openDropdown": {
          "sling:resourceType": "wcm/dialogs/components/selectitem",
          "label": "Open Dropdown",
          "value": "openDropdown"
        }
      },
      "actionModalTitle": {
        "sling:resourceType": "wcm/dialogs/components/textfield",
        "name": "actionModalTitle",
        "label": "Title",
        "ws:display": {
          "condition": {
            "sourceName": "actionType",
            "values": "openModal"
          }
        }
      },
      "actionUrl": {
        "sling:resourceType": "wcm/dialogs/components/pathpicker",
        "rootPath": "/content",
        "name": "actionUrl",
        "label": "URL",
        "ws:display": {
          "condition": {
            "sourceName": "actionType",
            "values": "openModal"
          }
        }
      },
      "hideFooter": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "hideFooter",
        "label": "Hide Modal Footer",
        "ws:display": {
          "condition": {
            "sourceName": "actionType",
            "values": "openModal"
          }
        }
      }
    },
    "styleTab": {
      "sling:resourceType": "wcm/dialogs/components/tab",
      "label": "Style",
      "classes": {
        "sling:resourceType": "wcm/dialogs/components/include",
        "path": "/apps/typerefinery/components/dialog/tabs/style/classes"
      },
      "buttonVariant": {
        "sling:resourceType": "wcm/dialogs/components/select",
        "name": "buttonVariant",
        "label": "Button Variant",
        "default": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Default",
          "selected": true,
          "value": ""
        },
        "primary": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Primary",
          "value": "primary"
        },
        "secondary": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Secondary",
          "value": "secondary"
        },
        "success": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Success",
          "value": "success"
        },
        "warning": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Warning Button",
          "value": "warning"
        },
        "danger": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Danger Button",
          "value": "danger"
        },
        "info": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Info Button",
          "value": "info"
        },
        "dark": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Dark Button",
          "value": "dark"
        },
        "gray": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Gray Button",
          "value": "light"
        },
        "link": {
          "sling:resourceType": "wcm/dialogs/components/select/selectitem",
          "label": "Link Button",
          "value": "link"
        }
      },
      "isOutlinedButton": {
        "sling:resourceType": "wcm/dialogs/components/toggle",
        "name": "isOutlinedButton",
        "label": "Outlined Button"
      }
    },
    "gridTab": {
      "sling:resourceType": "wcm/dialogs/components/include",
      "path": "/apps/typerefinery/components/dialog/tabs/grid"
    }
  }
}
