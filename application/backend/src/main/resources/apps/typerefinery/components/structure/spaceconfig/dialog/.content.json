{
  "sling:resourceType": "wcm/dialogs/dialog",
  "tabs": {
    "sling:resourceType": "wcm/dialogs/components/tabs",
      "generalTab": {
        "sling:resourceType": "wcm/dialogs/components/tab",
        "label": "General",
        "pageTitle": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "Title",
          "name": "jcr:title",
          "description": "Value for this field should be [Space Config]",
          "required": true,
          "placeholder": "Space Config"
        },          
        "pageName": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "Name",
          "description": "Value for this field should be [_admin]",
          "name": "name",
          "required": true,
          "placeholder": "_admin",
          "ws:disallowedContext": ["edit"]
        },
        "icon": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "icon",
          "name": "icon",
          "required": false
        }
      },
      "deployTab": {
        "sling:resourceType": "wcm/dialogs/components/tab",
        "label": "Deploy",
        "deployTarget": {
          "sling:resourceType": "wcm/dialogs/components/select",
          "name": "deployTarget",
          "label": "Deploy Target",
          "description": "Deploy space contents to Github repository.",
          "default": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "- Select -",
            "value": "",
            "selected": true
          },  
          "reference": {
            "sling:resourceType": "wcm/dialogs/components/select/selectitem",
            "label": "Github",
            "value": "github"
          }
        },
        "publishPaths": {
          "name": "publishPaths",
          "label": "Additional Paths to Publish",
          "sling:resourceType": "wcm/dialogs/components/multifield",
          "ws:disallowedContext": ["edit:panel"],
          "path": {
            "sling:resourceType": "wcm/dialogs/components/pathpicker",
            "rootPath": "/",
            "name": "path",
            "label": "Path"
          }
        }
      },
      "deployGithubTab": {
        "sling:resourceType": "wcm/dialogs/components/tab",
        "label": "Github",
        "githubRepository": {
            "sling:resourceType": "wcm/dialogs/components/textfield",
            "label": "Repository URL",
            "name": "deployGithubRepositoryUrl",
            "description": "Github Repository to publish to",
            "placeholder": "https://github.com/user/repo"
        },
        "githubToken": {
            "sling:resourceType": "wcm/dialogs/components/textfield",
            "label": "Personal Token",
            "name": "deployGithubToken",
            "type": "password",
            "description": "Github Personal Access Token (ghp_xxx...)",
            "placeholder": "ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        },
        "githubBranch": {
            "sling:resourceType": "wcm/dialogs/components/textfield",
            "label": "Branch",
            "description": "branch to push file to.",
            "name": "deployGithubBranch",
            "placeholder": "main"
        },
        "contentGithubBranch": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "Content Export and Import Branch",
          "description": "branch to use for exporting and importing space contents.",
          "name": "contentGithubBranch",
          "placeholder": "content"
        },
        "githubUsername": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "Username",
          "description": "Username to use for commits (user.name).",
          "name": "deployGithubUserName",
          "placeholder": "typerefinery"
        },
        "githubEmail": {
          "sling:resourceType": "wcm/dialogs/components/textfield",
          "label": "Email",
          "description": "Email to use for commits (user.email).",
          "name": "deployGithubUserEmail",
          "placeholder": "deploy@typerefinery.ai"
        },
        "ws:display": {
          "condition": {
            "sourceName": "deployTarget",
            "values": "github"
          }
        }
      }
    }
}